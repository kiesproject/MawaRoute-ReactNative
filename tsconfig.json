{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-native",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./index.js",
    "build",
    "node_modules",
    "__tests__"
  ],
}